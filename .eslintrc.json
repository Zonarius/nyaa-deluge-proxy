{
    "plugins": [
        "node"
    ],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "arrow-parens": 0,
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    }
}